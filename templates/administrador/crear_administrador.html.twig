{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
    <h2 class="text-center mb-4 font-weight-light Titulo">Registrar un administrador</h2>
    <div class="container bg-light">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-sm-3 col-form-label">Nombre de usuario:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.NombreUsuario , {'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-sm-3 col-form-label">Email:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.email , {'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="formGroupExampleInput" class="col-sm-3 col-form-label">Contraseña:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.Contrasena , {'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    {{ form_widget(form.guardar , {'attr':{'class':'btn btn-success font-weight-bold mt-3'}} ) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
        <hr>
    </div>


    <div class="container">
        <div class="table-responsive text-center">
            <table class="table table-bordered table-hover table-light">
                <thead class="thead-light">
                <th>Nombre de usuario</th>
                <th>Email</th>
                <th>Contraseña</th>
                </thead>
                <tbody>
                {% for administrador in pagination %}
                    <tr>
                        <td>{{ administrador.NombreUsuario }}</td>
                        <td>{{ administrador.email }}</td>
                        <td>{{ administrador.contrasena }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}